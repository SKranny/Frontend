.main-layout__user-pic
  width 50px
  height 50px
  border-radius 50%
  overflow hidden
  margin-right 15px
  flex none
  background-color #cceed8

  div
    display flex
    align-items center
    justify-content center
    width 100%
    height 100%
    object-fit cover
  
  img
    display flex
    align-items center
    justify-content center
    width 100%
    height 100%
    object-fit cover
  
.filter-green
    fill #21a45d
