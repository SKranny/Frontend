.user-status
  font-size 13px
  line-height 19px
  color #9EA4AD
  white-space nowrap
  display flex
  align-items center
  word-break break-all

  &:before
    content ''
    display none
    width 5px
    height 5px
    border-radius 50%
    background-color eucalypt
    margin-right 5px
  
  &.online
    color eucalypt

    &:before
      display block   
  
  &.offline
    color #A6A6A6

    &:before
      display block
      background-color #C5C5C5
    
  

