.tooltip
  display block !important
  z-index 10000
 
  .tooltip-inner
    background #fff
    padding 10px
    font-size 15px
    color #2F2F37
    box-shadow standart-boxshadow
 
  &[x-placement^="top"]
    margin-bottom 5px
 
  &[x-placement^="bottom"]
    margin-top 20px
    margin-right 60px
 
  &[x-placement^="right"]
    margin-left 5px
  
  &[x-placement^="left"]
    margin-right 5px
 
  &.popover
    $color #f9f9f9
 
    .popover-inner
      background $color
      color black
      padding 24px
      border-radius 5px
      box-shadow 0 5px 30px rgba(black, .1)
    
    .popover-arrow
      border-color $color 
 
  &[aria-hidden='true']
    visibility hidden
    opacity 0
    transition opacity .15s, visibility .15s
   
  &[aria-hidden='false']
    visibility visible
    opacity 1
    transition opacity .15s